<h1>Tasks</h1>

<% @tasks.each do |t| %>
  <h2><%= t.cohort.name %> | <%= t.description %></h2>
  <p>Priority: <%= t.priority %> | Due: <%= t.due_date %></p>
  <form class="btn" action="/user_tasks" method="POST">
    <input type="hidden" name="user_id" value="<%= session[:user_id] %>">
    <input type="hidden" name="task_id" value="<%= t.id %>">
    <input type="submit" value="Mark Complete">
  </form>
<% end %>
