<%= render 'partials/flash' %>

<h1><%= @task.description %></h1>

<div class="row">
  <div class="col-1">
    <h3>Cohort: <%= @task.cohort.name %></h3>
    <p>Priority: <%= @task.priority %> | Due: <%= @task.due %>
    <%= render 'partials/claim', task: @task %>
  </div>

  <div class="col-2 form" style="margin-top:20px">
    <h1 class="form-heading">Claimed By</h1>
    <% @task.users.each do |u| %>
      <p><%= u.full_name %></p>
    <% end %>
  </div>
</div>
