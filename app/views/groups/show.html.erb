<%= render 'partials/flash' %>

<div class="row">
  <div class="col-1">
    <h1 class="group-name"><%= @group.name %></h1>
    <p class="group-description"><%= @group.description %></p>
    <p class="group-count">(<%= @group.users.count %> Users)</p>
    -------------------------------------
  </div>

  <div class="col-2 form">
    <%= render 'partials/members', group: @group, members: @group.users %>
  </div>
</div>

<a href="#" class="js-next btn btn-right" data-id="<%=@group.id%>">Next Group</a>
<% if current_user.admin %>
  <%= link_to "Edit Group", edit_group_path(@group), class: "btn" %>
  <%= link_to 'Delete Group', @group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
<% end %>
